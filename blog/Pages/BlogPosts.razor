@page "/blogposts"
@inject HttpClient Http
@inject List<shared.GithubContent> blogposts
@using blog.shared

<h1>Blogposts</h1>

@if (blogposts == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Date</th>
                <th>Url</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var blogpost in blogposts)
            {
                <tr>
                    <td>@blogpost.DisplayName</td>
                    <td>@blogpost.Date</td>
                    <td><a href="/blog/@GetIndex(@blogpost)">@blogpost.DisplayName</a></td>
                </tr>
            }
        </tbody>
    </table>
}

@code {    

    private string GithubContentUrl = "https://api.github.com/repos/spaelling/blog/contents/blogposts";

    protected override async Task OnInitializedAsync()
    {
        blogposts.Clear();
        blogposts.AddRange(await Http.GetJsonAsync<GithubContent[]>(GithubContentUrl));
    }

    protected string GetIndex(GithubContent content)
    {
        return $"{blogposts.IndexOf(content)}";
    }
}
